<h1>Редактировать {{course.title}}</h1>

<form action="/courses/edit" method="POST">
    <div class="input-field">
        <input name="title" id="title" type="text" class="validate" value = "{{course.title}}" required>
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите название курса"></span>
    </div>
    <div class="input-field">
        <input name="cost" id="cost" type="number" class="validate" value = "{{course.cost}}" required>
        <label for="cost">Цена курса</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>
    <div class="input-field">
        <input name="img" id="img" type="text" class="validate" value = "{{course.img}}" required>
        <label for="img">URL картинки</label>
        <span class="helper-text" data-error="Вставьте URL"></span>
    </div>

    <input type="hidden" name="id" value = "{{course.id}}">
    <input type="hidden" name="_csrf" value="{{csurf}}">
    <button type="submit" class="btn btn-primary">Редактировать курс</button>
</form>
<form action="/courses/remove" method="POST">
    <input type="hidden" name="id" value="{{course.id}}">
    <input type="hidden" name="_csrf" value="{{csurf}}">
    <button class="btn red">Удалить</button>
</form>