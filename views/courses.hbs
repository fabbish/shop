<h1>Курсы</h1>

{{#if courses.length}}
{{#each courses}}
	<div class="row">
		<div class="col s6 offset-s3">
	  		<div class="card">
				<div class="card-image">
					<img src="{{this.img}}" alt="{{this.title}}">
				</div>
				<div class="card-content">
					<span class="card-title">{{this.title}}</span>
					<p class="cost">{{this.cost}}</p>
				</div>
				<div class="card-action actions">
					<a href="/courses/{{this.id}}" target="_blank">Открыть курс</a>
					{{#if @root.isAuth}}
						<a href="/courses/{{this.id}}/edit?allow=true">Редактировать курс</a>
						<form action="/card/add" method="POST">
							<input type="hidden" name="id" value="{{this.id}}">
							<input type="hidden" name="_csrf" value="{{@root.csurf}}">
							<button class="btn btn-primary" type="submit">Купить </button>
						</form>
					{{/if}}
				</div>
	  		</div>
		</div>
  	</div>
{{/each}}
{{else}}
	<p>Курсов пока нет</p>
{{/if}}