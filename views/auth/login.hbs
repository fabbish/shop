<div class="auth">
    <div class="row">
        <div class="col s12">
        <ul class="tabs">
            <li class="tab col s6"><a class="active" href="#login">Войти</a></li>
            <li class="tab col s6"><a href="#register">Регистрация</a></li>
        </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
            {{#if loginError}}
                <p class="error">{{loginError}}</p>
            {{/if}}
            <form action="/auth/login" method="POST">
                <div class="input-field">
                    <input name="email" id="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Введите email"></span>
                </div>
                <div class="input-field">
                    <input name="password" id="password" type="password" class="validate" required>
                    <label for="password">Пароль</label>
                    <span class="helper-text" data-error="Введите пароль"></span> 
                </div>
                <input type="hidden" name="_csrf" value="{{csurf}}">
                <button type="submit" class="btn btn-primary">Войти</button>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3">
            {{#if registerError}}
                <p class="error">{{registerError}}</p>
            {{/if}}
            <form action="/auth/register" method="POST">
                <div class="input-field">
                    <input name="email" id="remail" type="email" class="validate" required>
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="Введите email"></span>
                </div>
                <div class="input-field">
                    <input name="password" id="rpassword" type="password" class="validate" required>
                    <label for="rpassword">Пароль</label>
                    <span class="helper-text" data-error="Введите пароль"></span> 
                </div>
                <div class="input-field">
                    <input name="confirm" id="confirm" type="password" class="validate" required>
                    <label for="confirm">Подтвердите пароль</label>
                    <span class="helper-text" data-error="Введите пароль повторно"></span> 
                </div>
                <div class="input-field">
                    <input name="name" id="name" type="text" class="validate" required>
                    <label for="name">Ваше имя</label>
                    <span class="helper-text" data-error="Введите имя"></span>
                </div>
                <input type="hidden" name="_csrf" value="{{csurf}}">
                <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
            </form>
        </div>
    </div>
</div>