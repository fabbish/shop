<h1>Корзина</h1>
<div id="card">
    {{#if courses.length}}
        <table>
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Количество</th>
                    <th>Цена</th>
                </tr>
            </thead>
            <body>
                {{#each courses}}
                    <tr>
                        <td>{{title}}</td>
                        <td>{{count}}</td>
                        <td><button class="btn btn-small js-remove" data-id="{{_id}}" data-csurf="{{@root.csurf}}">Удалить</button></td>
                    </tr>
                {{/each}}
            </body>
        </table>
        <p><strong>Цена:</strong> <span class="cost">{{cost}}</span></p>
        <form action="/order" method="POST">
            <input type="hidden" name="_csrf" value="{{csurf}}">
            <button class="btn" type="submit">Оформить заказ</button>
        </form>
    {{else}}
        <p>Корзина пуста</p>
    {{/if}}
</div>